    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./build/source/boot/boot_main.elf",
            "request": "launch",
            "type": "cortex-debug",
            "showDevDebugOutput": "both",
            "servertype": "pyocd",
            "targetId": "HC32L130",
            "interface": "swd",
            "serverArgs": [
                "--frequency 1000000"
            ],
            "runToEntryPoint": "main",
            "armToolchainPath": "${workspaceFolder}/tool/gcc/bin/",
            // "preLaunchTask": "load"
        }
    ]
}